 @page
@model ResendEmailConfirmationModel
@{
	ViewData["Title"] = "Resend email confirmation";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<style>
	.btn-primary {
		background-color: #0b459f;
		color: white;
		width: 100%;
	}

	.btn-primary:hover {
		background-color: #007bff;
	}

	.form-control {
		border-color: #0b459f;
	}

	.form-control:focus {
		border-color: #007bff;
		box-shadow: none;
	}

	.form-label {
		color: #0b459f;
	}

	.wu-page {
		padding: 150px 0;
	}
</style>

<div class="container mt-5 wu-page">
	<h1 class="text-center mb-4">@ViewData["Title"]</h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form method="post">
				<div asp-validation-summary="All" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email" class="form-label">Email address</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary btn-lg">Resend</button>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
