@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<style>
    .card {
        margin: 50px auto;
        max-width: 600px;
        border-color: #00a693;
    }

    .card-header {
        background-color: #00a693;
        color: white;
    }

    .btn-login {
        background-color: #00a693;
        color: white;
        width: 50%;
    }

        .btn-login:hover {
            background-color: #00877b;
        }
</style>

<div class="container">
    <div class="card">
        <div class="card-header text-center">
            Log in
        </div>
        <div class="card-body">
            <p>Please enter the email address you used to set up your Online Application account. This will be different to your University of Westminster email account if you have one.</p>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <input asp-for="Input.Email" type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password*</label>
                    <input asp-for="Input.Password" type="password" class="form-control" id="password" required>
                </div>
                <div class="d-flex justify-content-center">
                    <button id="login-submit" type="submit" class="btn btn-login">Log in</button>
                </div>
                <br />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}