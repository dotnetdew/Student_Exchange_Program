@model StudentExchange.Wiut.Web.ViewModels.CreateHousingVM

<link href="~/css/toastr.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/toastr.min.js"></script>

@if (ViewBag.Saved != null)
{
    <script>
        toastr.success("Successfully saved!");
    </script>
}
<style>
    .form-section {
        background-color: #fff;
        border: 1px solid #0b459f; /* Blue border */
        border-radius: 0px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .form-section h3 {
            margin-top: 0;
            font-weight: bold;
            color: #0b459f;
        }

        .form-section.active {
            display: block;
        }

        .form-section .form-group {
            margin-bottom: 20px;
        }

        .form-section .form-control {
            height: 40px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
        }

        .form-section .btn {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            background-color: #0b459f;
            color: #fff;
            cursor: pointer;
        }

            .form-section .btn:hover {
                background-color: #23527c;
            }

    .housing-location {
        margin-bottom: 20px;
        padding: 10px;
        text-align: center;
    }

        .housing-location img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border: 1px solid #0b459f; /* Blue border */
        }

    .location-details {
        font-size: 14px;
        margin-top: 10px;
    }

        .location-details b {
            font-weight: bold;
            color: #0b459f;
        }

    .info-section {
        margin-top: 20px;
    }

        .info-section h4 {
            font-weight: bold;
            color: #0b459f;
        }
</style>

<form asp-action="SaveHousingDetails" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="StudentId" class="form-control" />

    <div id="personal-details" class="form-section active">
        <h3>Housing</h3>
        <hr />

        <div class="form-group">
            <label asp-for="WishToApplyForHousingInUniversity" class="control-label">Do you wish to apply for a place in University of Westminster housing *</label>
            <select asp-for="WishToApplyForHousingInUniversity" class="form-control form-select" id="WishToApplyForHousingInUniversity" name="WishToApplyForHousingInUniversity">
                <option selected disabled></option>
                <option>Yes</option>
                <option>No</option>
            </select>
            <span asp-validation-for="WishToApplyForHousingInUniversity" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="housing-location">
                    <a href="@Url.Action("Location1", "Housing", new { studentId = Model.StudentId })">
                        <img src="~/images/dormitory1.jpg" alt="Dormitory 1" />
                    </a>
                    <div class="location-details">
                        <b>Location 1:</b> 1A Yangi zamon Street<br />
                        <b>For:</b> Undergraduate and postgraduate students<br />
                        <b>Phone number:</b> +998712387481
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="housing-location">
                    <a href="@Url.Action("Location2", "Housing", new { studentId = Model.StudentId })">
                        <img src="~/images/dormitory2.jpg" alt="Dormitory 2" />
                    </a>
                    <div class="location-details">
                        <b>Location 2:</b> 9 Turk Kurgan Street<br />
                        <b>For:</b> Undergraduate and postgraduate students<br />
                        <b>Phone number:</b> +998712387482
                    </div>
                </div>
            </div>
        </div>

        <div class="info-section">
            <h4>Housing Information</h4>
            <ul>
                <li><b>Yangi Zamon (YZ) Hall:</b> Open for new and continuing undergraduates on courses of the School of Law, Technology and Education (SOLTE)</li>
                <li><b>Turk Kurgan (TK) Hall:</b> Hosts new and continuing undergraduates on courses of the School of Business and Economics (SOBE)</li>
            </ul>
            <p><b>Priority:</b> Priority in registration is given to 1st year students (CIFS). The remaining places are allocated according to a quota among undergraduate students, with priority for lower levels.</p>
            <p><b>Eligibility:</b> You can apply for a place in our halls of residence if you have completed enrollment for the current or upcoming academic term as a full-time student.</p>
        </div>
        <br /><br />

        <div class="d-flex justify-content-end">
            <p style="margin-right: auto;">*Denotes a mandatory field</p>
            <a asp-action="SaveDisabilityLearningSupport" asp-route-studentId="@Model.StudentId" class="btn btn-primary" style="margin-right: 10px;">Back</a>
            <button type="submit" class="btn btn-primary">Next</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
